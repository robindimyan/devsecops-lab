<% include ../partials/header.ejs %>
<div class="container">
  <div class="row">
      <form class="form-horizontal" action="/event/edit" method="POST">
        <input type="hidden" name="e_id" value="<%= item.e_id%>"/>
        <div class="form-group">
          <label for="inputName" class="col-sm-2 control-label">Event Title*</label>
          <div class="col-sm-10">
            <input class="form-control" id="inputName" type="text" name="e_name" value="<%= item.e_name%>" placeholder="Event Title" required/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputStartDate" class="col-sm-2 control-label">Start Date*</label>
          <div class="col-sm-4">
            <input class="form-control" type="date" id="inputStartDate" value="<%= item.e_start_date%>" name="e_start_date" required/>
          </div>

          <label for="inputEndDate" class="col-sm-2 control-label">End Date*</label>
          <div class="col-sm-4">
            <input class="form-control" type="date" id="inputEndDate" value="<%= item.e_end_date%>" name="e_end_date" required/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputDesc" class="col-sm-2 control-label">Location</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="inputLocation" value="<%= item.e_location%>" name="e_location" placeholder="Location" />
          </div>
        </div>
        <div class="form-group">
          <label for="inputDesc" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="inputDesc" name="e_desc" rows="3" placeholder="Description"><%= item.e_desc %></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/" class="btn btn-default">Cancel</a>
          </div>
        </div>
      </form>
  </div>
</div>
<% include ../partials/footer.ejs %>
